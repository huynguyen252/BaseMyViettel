<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/whiteSolid">
    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/dimen_6dp"
        android:background="@color/default_color_app"/>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Công ty TNHH Viễn thông Hiếu Bình"
            android:textSize="@dimen/dimen_18dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black_v5"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:maxLines="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/dimen_12dp"
                android:layout_height="@dimen/dimen_18dp"
                android:background="@drawable/ic_dia_diem_v3"
                android:layout_margin="@dimen/dimen_10dp"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/tv_shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Số 90 Phùng Hưng, Phúc La Hà Đông Hà Nội"
                android:textSize="@dimen/dimen_15dp"
                android:maxLines="2"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="match_parent"
        android:src="@drawable/icon_arrow_right_new"/>
</LinearLayout>