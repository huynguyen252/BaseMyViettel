<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/block_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/pf_beausans_pro"
                    android:text="@string/info_customer_ntt"
                    android:textAllCaps="false"
                    android:textColor="@color/black_v5"
                    android:textSize="@dimen/text_size_18sp" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_choose_tem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:text="@string/sampling_ntt"
                    android:fontFamily="@font/pf_beausanspro_bold"
                    android:textColor="@color/default_color_app"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_7dp"
                android:layout_marginVertical="@dimen/dimen_5dp"
                android:background="@drawable/bg_edittext_v2">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Nhập họ và tên"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_7dp"
                android:layout_marginVertical="@dimen/dimen_5dp"
                android:background="@drawable/bg_edittext_v2">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:background="@android:color/transparent"
                    android:hint="Số điện thoại"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01 số thuê bao được đặt tối đa 10 đơn hàng/ngày"
                android:textColor="@color/color_727272"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:textSize="@dimen/dimen_11dp"
                android:textStyle="italic"/>
            <LinearLayout
                android:id="@+id/ll_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_7dp"
                android:layout_marginVertical="@dimen/dimen_5dp"
                android:background="@drawable/bg_edittext_v2">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="date"
                    android:hint="Ngày sinh"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/province_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_5dp"
                android:background="@drawable/bg_edittext_v2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/province_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:hint="@string/ntt_hint_province_city"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/color_727272"
                    android:textColorHint="@color/color_727272"
                    android:textSize="@dimen/text_size_14sp"
                    android:fontFamily="@font/pf_beausanspro_bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginRight="@dimen/dimen_13dp"
                    android:layout_width="@dimen/size_18dp"
                    android:layout_height="@dimen/size_18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_dropdown_new" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/district_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_5dp"
                android:background="@drawable/bg_edittext_v2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/district_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:hint="@string/ntt_hint_district"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/color_727272"
                    android:textColorHint="@color/color_727272"
                    android:textSize="@dimen/text_size_14sp"
                    android:fontFamily="@font/pf_beausanspro_bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginRight="@dimen/dimen_13dp"
                    android:layout_width="@dimen/size_18dp"
                    android:layout_height="@dimen/size_18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_dropdown_new" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/commune_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_5dp"
                android:background="@drawable/bg_edittext_v2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/commune_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:hint="@string/ntt_hint_wards"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/color_727272"
                    android:textColorHint="@color/color_727272"
                    android:textSize="@dimen/text_size_14sp"
                    android:fontFamily="@font/pf_beausanspro_bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginRight="@dimen/dimen_13dp"
                    android:layout_width="@dimen/size_18dp"
                    android:layout_height="@dimen/size_18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_dropdown_new" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_7dp"
                android:layout_marginVertical="@dimen/dimen_5dp"
                android:background="@drawable/bg_edittext_v2">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Nhập địa chỉ chi tiết"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/pf_beausanspro_bold"
                android:paddingTop="@dimen/size_12dp"
                android:text="@string/paper_information"
                android:textAllCaps="false"
                android:textColor="@color/color_44494D"
                android:textSize="16sp"
                />
            <LinearLayout
                android:id="@+id/ll_papers_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_7dp"
                android:layout_marginVertical="@dimen/dimen_15dp"
                android:background="@drawable/bg_edittext_v2">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_papers_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:hint="Nhập số giấy tờ*"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01 CMND/CCCD/ Hộ chiếu chỉ được hòa mạng tối đa 3 số thuê bao/tháng. Yêu cầu nhập chính xác CMND/thẻ CC/Hộ chiếu và đảm bảo thời hạn không quá 15 năm kể từ ngày cấp"
                android:textColor="@color/color_727272"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:textSize="@dimen/dimen_11dp"
                android:textStyle="italic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_ngay_cap"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_7dp"
                    android:layout_marginVertical="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:background="@drawable/bg_edittext_v2">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/tv_ngay_cap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="date"
                        android:hint="Nhập ngày cấp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_noi_cap"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_7dp"
                    android:layout_marginVertical="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:background="@drawable/bg_edittext_v2">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/tv_noi_cap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Nhập nơi cấp"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nhap_thong_tin_continue_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginVertical="@dimen/size_12dp"
                android:enabled="false"
                android:text="@string/continue_register"
                android:textColor="@color/dustyGray"
                android:background="@drawable/bg_button_disable"
                android:textAllCaps="false" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>