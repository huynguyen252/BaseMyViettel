<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ln_block_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:fontFamily="@font/pf_beausanspro_bold"
                    android:text="@string/hinh_thuc_tt"
                    android:textColor="@color/color_44494D"
                    android:textSize="@dimen/text_size_18sp"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pf_beausanspro_bold"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="@string/customer_infor"
                    android:textAllCaps="false"
                    android:textColor="@color/color_44494D"
                    android:textSize="@dimen/text_size_18sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/edit_customer_infor_img"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:padding="@dimen/dimen_6dp"
                    android:visibility="visible"
                    android:src="@drawable/ic_update_infor_buy_sim" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/color_828282"
                    android:src="@drawable/ic_ten_khach_hang_v3" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/color_828282"
                    android:src="@drawable/ic_birthday_v3" />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/color_828282"
                    android:src="@drawable/ic_phone_v3" />

                <TextView
                    android:id="@+id/tv_contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pf_beausanspro_bold"
                    android:text="@string/paper_information"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:textAllCaps="false"
                    android:textColor="@color/color_44494D"
                    android:textSize="@dimen/text_size_18sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/edit_giay_to_img"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:padding="@dimen/dimen_6dp"
                    android:visibility="visible"
                    android:src="@drawable/ic_update_infor_buy_sim" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_cmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cmnd_v3" />

                <TextView
                    android:id="@+id/tv_cmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:textColor="#313131"
                    android:textSize="14sp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_date_cmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/color_828282"
                    android:src="@drawable/ic_birthday_v3" />

                <TextView
                    android:id="@+id/tv_cmt_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/color_828282"
                    android:src="@drawable/ic_dia_diem_v3" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:textColor="#313131"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_marginHorizontal="@dimen/dimen_15dp"
                android:background="@drawable/bg_ll_vtshop_top"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/size_15dp"
                    android:paddingTop="@dimen/size_12dp"
                    android:paddingRight="@dimen/size_15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_desc_ship"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/sf_pro_text_bold"
                            android:text="@string/tt_info_order"
                            android:textAllCaps="false"
                            android:textColor="@color/color_44494D"
                            android:textSize="@dimen/text_size_18sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/edit_shipping_img"
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:padding="@dimen/dimen_6dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_update_infor_buy_sim" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_info_sim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_info_sim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/dimen_13dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Hòa mạng trả trước"/>
                        <TextView
                            android:id="@+id/tv_price_sim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="50.000đ"
                            android:textSize="@dimen/dimen_14dp"
                            android:fontFamily="@font/sf_pro_text_semibold"
                            android:textColor="@color/default_color_app"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_sim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_2dp"
                        android:text="000000000"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:textSize="@dimen/dimen_16dp"/>
                    <LinearLayout
                        android:id="@+id/ll_money_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_7dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_money_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/dimen_13dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Nạp tiền"/>
                        <TextView
                            android:id="@+id/tv_total_money_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="50.000đ"
                            android:textSize="@dimen/dimen_14dp"
                            android:fontFamily="@font/sf_pro_text_semibold"
                            android:textColor="@color/default_color_app"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_mobile_pk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_2dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_mobile_pk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/dimen_13dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Giá đăng ký gói cước, dịch vụ"/>
                        <TextView
                            android:id="@+id/tv_price_mobile_vas_pk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="50.000đ"
                            android:textSize="@dimen/dimen_14dp"
                            android:fontFamily="@font/sf_pro_text_semibold"
                            android:textColor="@color/default_color_app"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_name_mobile_pk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_2dp"
                        android:text="D500T"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:textSize="@dimen/dimen_16dp"
                        />
                    <TextView
                        android:id="@+id/tv_vas_pk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_2dp"
                        android:textSize="@dimen/dimen_13dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Dịch vụ: thông báo ..."
                        android:textStyle="italic" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_desc_ship_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/sf_pro_text_bold"
                            android:text="@string/tt_info_delivery"
                            android:textAllCaps="false"
                            android:textColor="@color/color_44494D"
                            android:textSize="@dimen/text_size_18sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/edit_shipping_img_1"
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:padding="@dimen/dimen_6dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_update_infor_buy_sim" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_shipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_shipment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/sf_pro_text_semibold"
                            android:textSize="@dimen/dimen_12dp"
                            android:text="Phí giao hàng"/>
                        <TextView
                            android:id="@+id/tv_price_shipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="@dimen/dimen_14dp"
                            android:fontFamily="@font/sf_pro_text_semibold"
                            android:textColor="@color/default_color_app"
                            android:text="0đ"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:background="@drawable/bg_ll_payment_vtshop"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_18dp"
                    android:layout_marginTop="@dimen/size_12dp"
                    android:layout_marginRight="@dimen/size_18dp"
                    android:layout_marginBottom="@dimen/dimen_12dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tong_chi_phi"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/order_number_total_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pf_beausanspro_bold"
                        android:textColor="@color/default_color_app"
                        android:textSize="@dimen/text_size_32sp"
                        android:text="500.000đ" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10dp">

                <View
                    android:id="@+id/accept_condition_iv"
                    android:layout_width="24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_7dp"
                    android:padding="@dimen/dimen_5dp"
                    android:background="@drawable/ic_radio_button_active" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_10dp"
                        android:text="@string/dieu_khoan_mua_hang_3"
                        android:textColor="#44494D"
                        android:textSize="@dimen/size_14sp"/>
                    <TextView
                        android:id="@+id/tv_dieu_khoan_mh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dimen_10dp"
                        android:layout_marginLeft="2dp"
                        android:text="@string/dieu_khoan_mua_hang_4"
                        android:textColor="@color/default_color_app"
                        android:textSize="@dimen/size_14sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_request"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="@dimen/size_12dp"
        android:text="@string/hoan_tat"
        android:textColor="@color/white"
        android:background="@drawable/bg_button"
        android:textAllCaps="false"
        android:textSize="14sp" />
</LinearLayout>