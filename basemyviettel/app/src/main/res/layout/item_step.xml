<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parent_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/v_line_first"
            android:layout_width="@dimen/size_15dp"
            android:layout_height="3dp"
            android:layout_centerVertical="true"
            android:background="@color/ui_button_disable" />

        <RelativeLayout
            android:id="@+id/ll_first"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/brg_circle_selected_v4"
            android:layout_toRightOf="@+id/v_line_first">

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/brg_circle_selected_v4"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/img_first"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check_mark"
                android:visibility="visible" />

        </RelativeLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ll_first"
            android:background="@color/default_color_app" />

        <RelativeLayout
            android:id="@+id/ll_last"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/brg_circle_selected_v4"
            android:layout_toRightOf="@+id/v_line">

            <TextView
                android:id="@+id/tv_last"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerInParent="true"
                android:background="@drawable/brg_circle_selected_v4"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/img_last"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check_mark"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5dp"
        android:gravity="center"
        android:minWidth="@dimen/size_50dp"
        android:maxWidth="@dimen/size_60dp"
        android:text=""
        android:textStyle="bold"
        android:visibility="visible"
        android:textColor="@color/black"
        android:textSize="10sp"/>
</LinearLayout>